<%- include("./layouts/header2.ejs")%>

  <section class="sehs-1">

    <div class="sehs-1-1">
      <h3>DASHBOARD</h3>

      <div class="sehs-1-1-2">


        <div>
          <i class="fa-sharp fa-solid fa-house"></i>
          <a href="/">Schedule Interview</a>
        </div>




        <div>
          <i class="fa-sharp fa-solid fa-chart-simple"></i>
          <a href="/interview">View Interview</a>
      </div>



      </div>


      <div class="sehs-1-1-3">
        <a href="/admin/logout">Log Out</a>
      </div>

    </div>



    <div class="sehs-1-2">
      <h3>SCHEDULED INTERVIEW</h3>


      <div class="sehs-1-2-3">
        <ul>
          <li class="sehs-1-2-3-heading"><p>TITLE</p><p>TIMING</p><a></a></li>
          <% for (var i=0; i <editservices.length; i++ ) { %>
            <li class="text-closed"> 
              <p> 
                <%=editservices[i].name%>
              </p>
              <p>
                <%=editservices[i].timing%>
              </p>
              <a href=""><i class="fa-solid fa-trash deleteData" data-id="<%=editservices[i]._id%>"></i></a>

            </li>

            <%}%>

        </ul>
      </div>

    </div>

  </section>

  <script>

const focustext = document.querySelectorAll('.text-closed');
    focustext.forEach((e)=>{
         e.addEventListener('click',()=>{
           e.classList.toggle('text-active');
         }); 
    })
  

    $(document).ready(function () {
       $('.deleteData').click(function(){
        var postId = $(this).attr('data-id')
        var obj = $(this);

        $.ajax({
          url:"/deletedata",
          type: "POST",
          data: {id:postId}
        })
       })
    })
  </script>

  </body>

  </html>